{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"]
		},
		"typeRoots": ["./src/@types", "node_modules/@types"],
		"target": "es2017",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true
	}
}
